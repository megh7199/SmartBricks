extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Login

        // Login form
        form(method='POST' action='/users/login')
          div.form-group
            label(for='username') Username:
            input#pw.form-control(type='text', placeholder='Enter username' name='username')
          div.form-group
            label(for='password') Password:
            input#pw.form-control(type='password', placeholder='Enter password' name='password')
          br
          input.btn.btn-primary(type='submit',value = 'Login') 