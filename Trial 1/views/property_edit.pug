extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 #{title}

        // register form
        form(method='POST' action='/property/edit/'+property._id)
          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='Enter property name' name='name',value = property.Name)
          div.form-group
            label(for='description') Description:
            textarea#description.form-control(placeholder='Enter property description' name='description')= property.Description
          div.form-group
            label(for='ownername') Owner:
            input#ownername.form-control(type='text', placeholder='Enter owner name' name='ownername',value = property.Owner)
          div.form-group
            label(for='isBuilder') Are you a Builder:
            if property.isBuilder
              label(for='isBuilderyes') Yes
              input(id='yes',type = "radio", name='isBuilder',value='' checked)
              label(for='isBuilderno') No
              input(id='no',type = "radio", name='isBuilder',value='')
            else
              label(for='isBuilderyes') Yes
              input(id='yes',type = "radio", name='isBuilder',value='')
              label(for='isBuilderno') No
              input(id='no',type = "radio", name='isBuilder',value=''  checked) 
          div.form-group
            label(for='location') Location:
            input#location.form-control(type='text',placeholder='Enter location' name='location',value = property.Location)
          div.form-group
            label(for='sqfeet') Sq Feet:
            input#sqfeet.form-control(type='text',placeholder='Enter sqfeet' name='sqfeet',value = property.Sqfoot)
          div.form-group
            label(for='BHK') No of BHK:
            input#BHK.form-control(type='text',placeholder='Enter No of BHK' name='BHK',value = property.BHK)
          br
          input.btn.btn-primary(type='submit',value = 'Post Property') 